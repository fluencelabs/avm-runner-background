{
  "compilerOptions": {
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "./dist/",
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "composite": true,
    "allowJs": true,
  },
  "exclude": [
    "node_modules",
    "dist"
   ],
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "../runner-script/"
    }
  ],
}